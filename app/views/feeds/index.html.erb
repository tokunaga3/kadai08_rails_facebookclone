<p id="notice"><%= notice %></p>
<header>
  <h1>画像投稿</h1>
</header>

  <table class="container">
    <thead>
      <tr class="row">
        <th class="col-md-4" >Image</th>
        <th class="col-md-2">作成者</th>
        <th colspan="3" class="col-md-4"></th>
      </tr>
    </thead>

    <tbody>
      <% @feeds.each do |feed| %>
        <tr class="row">
          <td class="col-md-4"><%= image_tag feed.image.url %></td>
          <td class="col-md-2"><%= feed.user.name %></td>
          <td class="col-md-2"><%= link_to 'Show', feed %></td>
          <td class="col-md-2"><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td class="col-md-2"><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to '新しい画像を投稿する', new_feed_path %>
